<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>Coffee-Machine</display-name>
  
  <servlet>
    <servlet-name>main</servlet-name>
    <servlet-class>coffee_machine.controller.MainController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>main</servlet-name>
    <url-pattern>/home/*</url-pattern>
    <url-pattern>/user/*</url-pattern>
    <url-pattern>/admin/*</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>i18n</filter-name>
    <filter-class>coffee_machine.controller.i18n.LocaleFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>i18n</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>authentication</filter-name>
    <filter-class>coffee_machine.controller.security.AuthentificationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>authentication</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <error-page>
   <exception-type>java.lang.Throwable</exception-type>
    <location>/WEB-INF/view/jsp/error/errorPage.jsp</location>
  </error-page>

  <context-param>
    <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
    <param-value>i18n.messages</param-value>
  </context-param>

</web-app>